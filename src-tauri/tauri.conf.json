{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "gytmdl-gui",
  "version": "0.1.0",
  "identifier": "com.seungkilee.gytmdl-gui",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "gytmdl-gui",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "theme": "Light"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://releases.myapp.com/{{target}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEFBQUFBQUFBQUFBQUFBQUE="
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [
      "sidecars/gytmdl-x86_64-pc-windows-msvc",
      "sidecars/gytmdl-i686-pc-windows-msvc", 
      "sidecars/gytmdl-x86_64-apple-darwin",
      "sidecars/gytmdl-aarch64-apple-darwin",
      "sidecars/gytmdl-x86_64-unknown-linux-gnu",
      "sidecars/gytmdl-aarch64-unknown-linux-gnu"
    ],
    "copyright": "Copyright Â© 2024 gytmdl-gui contributors",
    "category": "Multimedia",
    "shortDescription": "YouTube Music downloader with GUI",
    "longDescription": "A cross-platform GUI application for downloading music from YouTube Music using gytmdl",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "tsp": false,
      "wix": {
        "language": ["en-US"],
        "template": "wix-template.wxs"
      },
      "nsis": {
        "displayLanguageSelector": true,
        "languages": ["English"],
        "installerIcon": "icons/icon.ico",
        "installMode": "perMachine"
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": "entitlements.plist",
      "hardenedRuntime": true
    },
    "linux": {
      "deb": {
        "depends": [],
        "section": "sound",
        "priority": "optional",
        "preInstallScript": "scripts/preinst.sh",
        "postInstallScript": "scripts/postinst.sh",
        "preRemoveScript": "scripts/prerm.sh",
        "postRemoveScript": "scripts/postrm.sh"
      },
      "appimage": {
        "bundleMediaFramework": false
      },
      "rpm": {
        "epoch": 0,
        "release": "1"
      }
    }
  }
}
